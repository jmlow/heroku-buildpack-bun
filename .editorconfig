# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 2

[[shell]]
indent_style = tab
indent_size = 2

[[bash]]
indent_style = tab
indent_size = 2
